<h1>Books#show</h1>

<%= @book.title %><br>
<a href="#"><img src="<%= @book.image_url %>"></a><br>

<%= link_to "一覧に戻る", books_path %>
<%= link_to "レビューを書く", "#{@book.id}/reviews/new" %><br>

<!-- review一覧始まり -->
<civ class="reviews">
  <% @book.reviews.each do |review| %>
	  <div class="review">
		投稿者：<%= review.editor %><br>
		レビュー：<%= review.review %><br>
		<%= link_to "レビューを修正する", "#{@book.id}/reviews/#{review.id}/edit" %><br>
		<%= link_to "削除する", book_review_path(@book, review), method: :delete %><br>
		<a href="https://twitter.com/share?ref_src=twsrc%5Etfw" class="twitter-share-button" data-show-count="false">Tweet</a><script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>
	  </div>
	<% end %>
</civ>

<h1>Books#show</h1>

<%= @book.title %><br>
<a href="#"><img src="<%= @book.image_url %>"></a><br>

<%= link_to "一覧に戻る", books_path %>

<%= link_to "レビューを書く", "#{@book.id}/reviews/new" %><br>

<!-- review一覧始まり -->
<civ class="reviews">
  <% @book.reviews.each do |review| %>
	  <div class="review">
		投稿者：<%= review.editor %><br>
		レビュー：<%= review.review %>
	  </div>
	<% end %>
</civ>
